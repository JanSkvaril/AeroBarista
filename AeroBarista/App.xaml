<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="AeroBarista.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:AeroBarista.Converters"
    xmlns:local="clr-namespace:AeroBarista">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:StringVisibilityConverter x:Key="StringVisibility" />
            <converters:TotalTimeConvertor x:Key="TotalStepsTime" />
            <converters:IconsPathConverter x:Key="IconPath" />
            <converters:LikeIconPathConverter x:Key="LikeIconPath" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
