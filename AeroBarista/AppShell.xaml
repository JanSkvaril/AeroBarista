<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AeroBarista.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AeroBarista.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <Tab Title="x">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage" />
        </Tab>
        <Tab Title="y">
            <ShellContent ContentTemplate="{DataTemplate local:x}" Route="x" />
        </Tab>
        <Tab Title="process">
            <ShellContent ContentTemplate="{DataTemplate local:ProcessPage}" Route="ProcessPage" />
        </Tab>

        <Tab Title="share">
            <ShellContent ContentTemplate="{DataTemplate local:FinishedPage}" Route="FinishedPage" />
        </Tab>

        <Tab Title="qrshare">
            <ShellContent ContentTemplate="{DataTemplate local:QRSharePage}" Route="QRSharePage" />
        </Tab>

        <Tab Title="detail">
            <ShellContent ContentTemplate="{DataTemplate local:DetailRecipePage}" Route="DetailRecipePage" />
        </Tab>

        <Tab Title="allRecipes">
            <ShellContent ContentTemplate="{DataTemplate local:RecipesPage}" Route="RecipesPage" />
        </Tab>
    </TabBar>


</Shell>
