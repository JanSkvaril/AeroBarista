<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="AeroBarista.Views.AddReviewView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AlohaKit.Controls;assembly=AlohaKit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <VerticalStackLayout
        BackgroundColor="{DynamicResource Primary}"
        MinimumHeightRequest="200"
        MinimumWidthRequest="200">
        <Label
            Margin="0,5"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Add review"
            TextColor="{DynamicResource Text}"
            VerticalOptions="Center" />
        <controls:Rating
            Grid.Column="1"
            Margin="0,5"
            SelectedFill="{DynamicResource Secondary}"
            SelectedStroke="{DynamicResource Secondary}" />
        <Editor
            Margin="10,5"
            BackgroundColor="{DynamicResource PrimaryLight}"
            HeightRequest="100"
            TextColor="{DynamicResource Text}"
            WidthRequest="200" />
        <Button
            Margin="10,5"
            BackgroundColor="{DynamicResource Secondary}"
            Text="Save" />
    </VerticalStackLayout>
</toolkit:Popup>