<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AeroBarista.Views.RecipesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:AeroBarista.Models"
    xmlns:viewModels="clr-namespace:AeroBarista.ViewModels"
    x:Name="Root"
    Title="RecipesPage"
    x:DataType="viewModels:RecipesViewModel">
    <ContentPage.Resources>
        <ControlTemplate x:Key="FrameRadioTemplate">
            <Frame Padding="0" CornerRadius="15" VerticalOptions="Start"
               HeightRequest="30" WidthRequest="100" HorizontalOptions="Start">

                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CheckedStates">
                        <VisualState x:Name="Checked">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#C69256"/>
                            </VisualState.Setters>
                        </VisualState>

                        <VisualState x:Name="Unchecked">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#372F2C"/>
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

                <Grid Margin="4" WidthRequest="100">
                    <ContentPresenter/>
                </Grid>
            </Frame>
        </ControlTemplate>
    </ContentPage.Resources>

    <Grid BackgroundColor="Black">
        <Image
            Aspect="AspectFill"
            Opacity="0.3"
            Source="background_image.png" />
        <Grid RowDefinitions="70, 50, *">
            <SearchBar
                x:Name="searchBar"
                Grid.Row="0"
                Margin="10,10"
                TextChanged="OnTextChanged"
                BackgroundColor="{DynamicResource PrimaryLight}"
                HeightRequest="50"
                Placeholder="Find recipe..."
                PlaceholderColor="{DynamicResource TextDescription}"
                SearchCommand="{Binding SearchCommand}"
                SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"
                TextColor="{DynamicResource Text}" />

            <ScrollView Grid.Row="1" Orientation="Horizontal" WidthRequest="250" HorizontalScrollBarVisibility="Never">
                <StackLayout Orientation="Horizontal" >
                    <RadioButton  ControlTemplate="{StaticResource FrameRadioTemplate}">
                        <RadioButton.Content>
                            <Label Text="All" TextColor="{DynamicResource Text}" HorizontalTextAlignment="Center" />
                        </RadioButton.Content>
                    </RadioButton>
                    
                    <RadioButton ControlTemplate="{StaticResource FrameRadioTemplate}">
                        <RadioButton.Content>
                            <Label Text="Default" TextColor="{DynamicResource Text}" HorizontalTextAlignment="Center" />
                        </RadioButton.Content>
                    </RadioButton>

                    <RadioButton ControlTemplate="{StaticResource FrameRadioTemplate}">
                        <RadioButton.Content>
                            <Label Text="My" TextColor="{DynamicResource Text}" HorizontalTextAlignment="Center" />
                        </RadioButton.Content>
                    </RadioButton>

                    <RadioButton ControlTemplate="{StaticResource FrameRadioTemplate}">
                        <RadioButton.Content>
                            <Label Text="Imported" TextColor="{DynamicResource Text}" HorizontalTextAlignment="Center" />
                        </RadioButton.Content>
                    </RadioButton>
                </StackLayout>
            </ScrollView>

            <ScrollView Grid.Row="2" Margin="10,10">
                <CollectionView ItemsSource="{Binding Recipes}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:RecipeModel">
                            <VerticalStackLayout
                                Margin="0,5"
                                BackgroundColor="{DynamicResource PrimaryLight}"
                                HeightRequest="40">
                                <Label
                                    Margin="5,0"
                                    HeightRequest="40"
                                    Text="{Binding Name}"
                                    TextColor="{DynamicResource Text}"
                                    VerticalTextAlignment="Center" />
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=BindingContext.RecipeDetailCommand}" CommandParameter="{Binding Id}" />
                                </VerticalStackLayout.GestureRecognizers>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>