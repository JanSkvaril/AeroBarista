<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AeroBarista.Views.ProcessPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:AeroBarista.ViewModels"
    Title="ProcessPage"
    x:DataType="viewModels:ProcessPageViewModel">
    <Grid BackgroundColor="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Image
            Grid.RowSpan="5"
            Aspect="AspectFill"
            Opacity="0.3"
            Source="background_image.png" />
        <Label
            Grid.Row="0"
            FontSize="30"
            HorizontalOptions="Center"
            Text="{Binding Recipe.Name}"
            VerticalOptions="Start" />
        <VerticalStackLayout Grid.Row="1">
            <Border
                Background="{DynamicResource Secondary}"
                StrokeThickness="0"
                VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label
                        Grid.Row="0"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="Remaining time:"
                        TextColor="WhiteSmoke"
                        VerticalOptions="Start" />
                    <Label
                        FontSize="50"
                        HorizontalOptions="Center"
                        Text="{Binding RemainingTime, StringFormat='{}{0:mm\\:ss}'}"
                        TextColor="WhiteSmoke"
                        VerticalOptions="Center" />

                    <ProgressBar
                        Margin="10"
                        MaximumWidthRequest="200"
                        Progress="{Binding StepProgress}"
                        ProgressColor="{DynamicResource PrimaryLight}" />
                </VerticalStackLayout>
            </Border>
            <Label
                FontSize="20"
                HorizontalOptions="Center"
                TextColor="WhiteSmoke"
                VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Total time: " />
                        <Span Text="{Binding CurrentTime, StringFormat='{}{0:mm\\:ss}'}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="3">

            <Label
                x:Name="PrevStep"
                FontSize="15"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{Binding PrevStep.ShorText}"
                TextColor="LightGray"
                VerticalOptions="Center" />
            <Label
                x:Name="CurrentStep"
                Margin="0,20,0,20"
                FontSize="25"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{Binding ActiveStep.ShorText}"
                TextColor="WhiteSmoke"
                VerticalOptions="Center" />



            <Label
                x:Name="NextStep"
                FontSize="15"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{Binding NextStep.ShorText}"
                TextColor="LightGray"
                VerticalOptions="Center" />
        </VerticalStackLayout>

        <HorizontalStackLayout
            Grid.Row="4"
            HorizontalOptions="Center"
            Spacing="10">
            <ImageButton
                Command="{Binding GoToPrevStepCommand}"
                Source="arrowleft.png"
                VerticalOptions="Center"
                WidthRequest="30" />
            <ImageButton
                x:Name="startPlayButton"
                Clicked="PausePlayButtonClicked"
                Source="pausesolid.png"
                WidthRequest="30" />
            <ImageButton
                Command="{Binding GoToNextStepCommand}"
                Source="arrowright.png"
                VerticalOptions="Center"
                WidthRequest="30" />
        </HorizontalStackLayout>

        <Grid.GestureRecognizers>
            <SwipeGestureRecognizer Command="{Binding GoToPrevStepCommand}" Direction="Right" />
            <SwipeGestureRecognizer Command="{Binding GoToNextStepCommand}" Direction="Left" />
        </Grid.GestureRecognizers>
    </Grid>
</ContentPage>